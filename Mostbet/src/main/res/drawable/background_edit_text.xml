<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item android:gravity="bottom" android:height="2.0dip" android:bottom="4.0dip">
                <shape android:shape="line">
                    <stroke android:width="1.0dip" android:color="?colorControlNormal" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false" android:state_pressed="false">
        <layer-list>
            <item android:gravity="bottom" android:height="2.0dip" android:bottom="4.0dip">
                <shape android:shape="line">
                    <stroke android:width="1.0dip" android:color="?colorControlNormal" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:gravity="bottom" android:height="2.0dip" android:bottom="4.0dip">
                <shape android:shape="line">
                    <stroke android:width="1.0dip" android:color="?colorControlActivated" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>