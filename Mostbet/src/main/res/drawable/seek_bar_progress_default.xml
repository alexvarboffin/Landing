<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <shape android:tint="?colorSeekbarBackground" android:shape="rectangle">
            <size android:height="8.0dip" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <selector>
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="?colorSeekbarProgress" />
                        <size android:height="8.0dip" />
                        <corners android:radius="4.0dip" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>