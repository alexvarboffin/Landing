<resources>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamilyLight">@font/roboto_light</item>
        <item name="fontFamilyMedium">@font/roboto_medium</item>
        <item name="fontFamilyRegular">@font/roboto_regular</item>

    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ContactHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ContactItem">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bottom_liner</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Re.TextView" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/color_black_87</item>
        <item name="android:textColorHint">@color/color_black_38</item>
        <item name="android:fontFamily">?fontFamilyRegular</item>
    </style>

    <style name="Re.TextView.Medium" parent="@style/Re.TextView">
        <item name="android:fontFamily">?fontFamilyMedium</item>
    </style>
<!--    style="?android:attr/progressBarStyleHorizontal"-->
    <style name="MaterialProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
<!--        <item name="android:layout_marginTop">40dp</item>-->
<!--        <item name="android:padding">30dp</item>-->
<!--        <item name="android:background">#C51162</item>-->
    </style>

</resources>
