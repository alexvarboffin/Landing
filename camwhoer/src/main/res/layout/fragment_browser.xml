<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--    android:fitsSystemWindows="true"-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#444"
            android:padding="0dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/input0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="top"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:drawablePadding="0dp"
                android:orientation="vertical"
                android:padding="0dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp">

                <ProgressBar
                    android:id="@+id/pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="-4dp"
                    android:foregroundGravity="bottom"
                    android:progress="0"
                    android:progressDrawable="@drawable/progressbar"
                    app:layout_anchorGravity="bottom|end" />

                <com.walhalla.android.webview.widget.RememberEditText
                    android:id="@+id/etInput"
                    style="@style/UrlInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="0dp"
                    android:drawableStart="@drawable/ic_baseline_https_24"
                    android:drawablePadding="3dp"
                    android:drawableTint="#00BFA5"
                    android:textColorLink="#00BFA5"
                    android:hint="@string/hint_tv_answer"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_button_margin"
                    android:paddingTop="0dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="8dp"
                    android:singleLine="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    app:rememberCount="10"
                    app:rememberId="input"
                    tools:ignore="Autofill,LabelFor"
                    tools:targetApi="o" />

            </LinearLayout>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/input0"
                android:background="@color/u_avi"
                android:padding="0dp">

                <com.walhalla.android.webview.widget.ExtendedWebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </RelativeLayout>


        <!--        <ProgressBar-->
        <!--            android:id="@+id/pb"-->
        <!--            android:layout_width="48dp"-->
        <!--            android:layout_height="48dp"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:layout_marginStart="0dp"-->
        <!--            android:layout_marginLeft="0dp"-->
        <!--            android:layout_marginTop="0dp"-->
        <!--            android:layout_marginEnd="0dp"-->
        <!--            android:layout_marginRight="0dp"-->
        <!--            android:layout_marginBottom="0dp"-->
        <!--            android:foregroundGravity="center"-->
        <!--            android:visibility="visible"-->
        <!--            app:layout_constraintBottom_toTopOf="@+id/input"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="@+id/swipe"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/swipe" />-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="@string/action_settings"
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:tint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_send_black_24dp"
            tools:ignore="VectorDrawableCompat,ImageContrastCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>